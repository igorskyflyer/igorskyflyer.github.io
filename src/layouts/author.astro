---
import Page from '@components/Page.astro'

const title = 'IgorSkyFlyer | Igor DimitrijeviÄ‡'
const description = ''
const featuredImage = 'https://igorskyflyer.github.io/assets/igorskyflyer.jpg'
---

<style>
  @keyframes animate {
    0%,
    100% {
      background-position: 100% 100%;
    }

    50% {
      background-position: 400% 100%;
    }
  }

  #author {
    display: flex;
    width: 276px;
    height: 276px;
    align-items: center;
    justify-content: center;
    text-align: center;
    margin: auto;
    background: linear-gradient(
      50deg,
      rgba(255, 0, 0, 1) 0%,
      rgba(255, 154, 0, 1) 10%,
      rgba(208, 222, 33, 1) 20%,
      rgba(79, 220, 74, 1) 30%,
      rgba(63, 218, 216, 1) 40%,
      rgba(47, 201, 226, 1) 50%,
      rgba(28, 127, 238, 1) 60%,
      rgba(95, 21, 242, 1) 70%,
      rgba(186, 12, 248, 1) 80%,
      rgba(251, 7, 217, 1) 90%,
      rgba(255, 0, 0, 1) 100%
    );
    background-size: 400% 100%;
    background-position: 100% 100%;
    border-radius: 50%;
    animation-duration: 4s;
    animation-name: animate;
    animation-fill-mode: both;
    animation-iteration-count: infinite;
  }

  #author img {
    max-width: 256px;
    border-radius: 50%;
  }
</style>

<Page title={title} description={description} featuredImage={featuredImage}>
  <div id="author">
    <img src="https://igorskyflyer.github.io/assets/igorskyflyer.jpg" alt="IgorSkyFlyer" />
  </div>
  <br />
  <slot />
</Page>
