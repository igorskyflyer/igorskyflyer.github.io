---
import Page from '@components/Page.astro'
import type { PageProps } from '@interfaces/PageProps'

const { frontmatter } = Astro.props
const { title, description, featuredImage } = frontmatter as PageProps

const pageTitle = `${title} - Blog | Igor DimitrijeviÄ‡`
---

<style>
  .post {
    text-align: justify;
    color: #d4d4ff;
  }

  #post--all-posts {
    margin-left: -0.5rem;
    font-size: 1.25rem;
  }

  #post--all-posts:before {
    content: '\02770\20';
  }
</style>

<Page title={pageTitle} description={description} featuredImage={featuredImage}>
  <a href="/blog/" id="post--all-posts">Back to all posts</a>
  <br />
  <br />
  <h2>{title}</h2>
  <article class="post">
    <slot />
  </article>
</Page>
