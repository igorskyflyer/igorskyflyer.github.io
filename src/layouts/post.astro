---
import Page from '../components/Page.astro'
import type { PageProps } from '../components/interfaces/PageProps'

const { frontmatter } = Astro.props
const { title, description, featuredImage } = frontmatter as PageProps

const pageTitle = `${title} – Blog | Igor Dimitrijević`
---

<Page title={pageTitle} description={description} featuredImage={featuredImage}>
  <a href="/blog/">&lsaquo; Back to all posts</a>
  <br />
  <h1>{title}</h1>
  <article class="post">
    <slot />
  </article>
</Page>
