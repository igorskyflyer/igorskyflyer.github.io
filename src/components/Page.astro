---
import type { PageProps } from '../components/interfaces/PageProps'

import PageHead from '../components/PageHead.astro'
import PageFooter from '../components/PageFooter.astro'
import PageHeader from './PageHeader.astro'

const { title, description, featuredImage } = Astro.props as PageProps
---

<!DOCTYPE html>
<html lang="en">
  <PageHead title={title} description={description} featuredImage={featuredImage} />
  <body>
    <PageHeader />
    <slot />
    <PageFooter />
  </body>
</html>
