---
import type { PageProps } from '@interfaces/PageProps'

import PageHead from '@components/PageHead.astro'
import PageFooter from '@components/PageFooter.astro'
import PageHeader from '@components/PageHeader.astro'

const { title, description, featuredImage } = Astro.props as PageProps
---

<!DOCTYPE html>
<html lang="en">
  <PageHead title={title} description={description} featuredImage={featuredImage} />
  <body>
    <style>
      :root {
        --main-bg: #221254;
        --main-text: #fff;
        --border-radius: 6px;
      }

      @font-face {
        font-family: 'Poppins';
        font-style: normal;
        font-weight: 400;
        font-display: swap;
        src: url('/font/Poppins.woff2') format('woff2');
        unicode-range: U+0000-00FF, U+0131, U+0152-0153, U+02BB-02BC, U+02C6, U+02DA, U+02DC, U+2000-206F, U+2074, U+20AC, U+2122,
          U+2191, U+2193, U+2212, U+2215, U+FEFF, U+FFFD;
      }

      html,
      body {
        /* dev: remove after */
        min-height: 98vh;
        scroll-behavior: smooth;
        -webkit-tap-highlight-color: transparent;
      }

      html,
      body {
        width: 100%;
        padding: 0;
        margin: 0;
        background: var(--main-bg);
        color: var(--main-text);
        font-family: 'Poppins', sans-serif;
      }

      body a,
      body a:visited {
        color: #11bce2;
        text-decoration: none;
      }

      main {
        padding: 1.5rem;
      }
    </style>
    <PageHeader />
    <main>
      <slot />
    </main>
    <PageFooter />
  </body>
</html>
