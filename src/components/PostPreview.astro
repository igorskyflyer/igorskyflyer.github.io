---
import { MarkdownInstance } from 'astro'
import PostExcerpt from '@igor.dvlpr/astro-post-excerpt'
import { postDate } from '@functions/posts'

export interface Props {
  post: MarkdownInstance<Record<string, any>>
}

const { post } = Astro.props

if (typeof post == 'undefined') {
  throw new TypeError('No required post prop.')
}

interface PostProps {
  title: string
  minutesRead: string
  publishDate: string
}

const { title = '', minutesRead = '', publishDate = '' } = post.frontmatter as PostProps

const postPublishedDate = postDate(publishDate)
---

<style>
  article {
    margin-bottom: 3rem;
    text-align: justify;
    color: #d4d4ff;
  }

  .post-link {
    display: block;
    margin-bottom: 0.5rem;
    font-size: 1.4rem;
    font-weight: bold;
    color: rgb(17, 188, 226);
  }

  .post-info {
    color: #9e9ece;
    font-size: 0.85rem;
  }

  .post-description {
    margin: 1.5rem 0 0 0;
    font-size: 0.95rem;
    color: #d4d4ff;
    text-align: justify;
  }

  .post--inner {
    padding: 0.25rem;
  }

  .post--meta {
    display: flex;
    justify-content: space-between;
  }

  @media screen and (min-width: 600px) {
    .post-info {
      flex-direction: row;
      justify-content: space-between;
    }
  }
</style>

<article>
  <a href={`${post.url}/`} class="post-link">{title}</a>
  <div class="post--inner">
    <div class="post-info">
      <div class="post--meta">
        <span>{postPublishedDate}</span>
        <span>{minutesRead}</span>
      </div>
      <span>by <a href="/igorskyflyer/">igorskyflyer</a></span>
    </div>
    <p class="post-description">
      <PostExcerpt post={post} words={30} addEllipsis={true} />
    </p>
  </div>
</article>
