---
const { post } = Astro.props

interface PostProps {
  title: string
  minutesRead: string
  description: string
}

const { title, minutesRead, description } = post.frontmatter as PostProps
---

<article>
  <a href={post.url}><h3>{title}</h3></a>
  <sub>{minutesRead}</sub>
  <br />
  <br />
  <span>{description}</span>
  <br />
  <br />
  <a href={post.url}>read more 👈🏼</a>
</article>
