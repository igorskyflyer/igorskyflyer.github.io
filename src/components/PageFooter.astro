---
import { getYear } from '@functions/utilities'
import { Icon } from 'astro-icon'

const year = getYear()
---

<style>
  .footer-link-icon {
    display: inline-block;
    margin: 0 0.3rem;
    color: #fff;
    opacity: 0.65;
    transition: opacity cubic-bezier(0.23, 1, 0.32, 1) 400ms;
  }

  .footer-link-icon:hover {
    opacity: 1;
  }

  #footer-author {
    transition: font-weight cubic-bezier(0.55, 0.055, 0.675, 0.19) 100ms;
  }

  #footer-author:hover {
    font-weight: bold;
  }

  #footer-heart {
    color: #f00;
    font-size: 1.4em;
  }
</style>

<footer>
  <a
    href="/rss.xml"
    rel="alternate"
    target="_blank"
    title="Read igorskyflyer.me's RSS Feed"
    class="footer-link-icon"><Icon name="mdi:rss" /></a
  >
  <a
    href="https://github.com/igorskyflyer"
