<style>
  header {
    margin-bottom: 0;
  }

  nav {
    text-align: right;
    overflow: hidden;
    position: fixed;
    right: 0;
    left: 0;
    bottom: 0;
    z-index: 100;
    margin-bottom: 0;
    display: flex;
    flex-direction: column-reverse;
  }

  #menu {
    display: flex;
    justify-content: end;
    flex-direction: column-reverse;
    height: 0;
    overflow: hidden;
    margin: 0 0 1.85rem 0;
    z-index: 2;
    list-style-type: none;
    transition: height ease-in 0.15s;
  }

  #menu li {
    width: 100%;
  }

  #menu a {
    display: block;
    padding: 0.7rem;
    font-size: 1.4rem;
    color: var(--main-text);
    text-decoration: none;
    border-radius: var(--border-radius);
    transition: background ease-out 0.3s;
  }

  #menu a:hover {
    background: rgb(93, 72, 154);
  }

  #hamburger-icon {
    display: block;
    margin-left: auto;
    z-index: 2;
    width: 3rem;
    cursor: pointer;
    background-color: rgba(255, 255, 255, 0.3);
    font-size: 1.9rem;
    color: var(--main-text);
    text-align: center;
    border-radius: var(--border-radius);
    user-select: none;
    margin-right: 0.8rem;
    margin-bottom: 0.8rem;
    border: 2px solid rgba(255, 255, 255, 0);
    transition: transform ease-in 0.2s, background ease-out 0.2s, border linear 0.2s;
  }

  #hamburger-icon:hover {
    background: rgb(93, 72, 154);
    border: 1px solid rgba(255, 255, 255, 0.6);
  }

  #menu-toggle {
    display: none;
  }

  #menu-toggle:checked + #hamburger-icon {
    transform: rotate(90deg);
  }

  #menu-toggle:checked ~ #menu-blur {
    top: 0;
  }

  #menu-toggle:checked ~ #menu {
    height: 80vh;
    padding: 0;
  }

  #menu-blur {
    position: fixed;
    left: 0;
    right: 0;
    top: 100%;
    bottom: 0;
    background: linear-gradient(310deg, #000, rgba(34, 18, 84, 0.5));
    transition: top ease-in 0.15s;
  }

  @media screen and (min-width: 600px) {
    header {
      margin-bottom: 2rem;
    }

    nav {
      position: static;
      right: auto;
      left: auto;
      bottom: auto;
      margin-top: 0.5rem;
    }

    #hamburger-icon {
      display: none;
    }

    #menu {
      flex-direction: row;
      justify-content: flex-end;
      height: auto;
      margin: 0 0.8rem 0 0;
    }

    #menu li {
      width: auto;
    }

    #menu a {
      padding: 0.5rem 0.8rem;
      font-size: 1rem;
      text-align: center;
    }

    #menu-blur {
      display: none;
    }

    #menu-toggle:checked ~ #menu {
      height: auto;
    }
  }
</style>

<header>
  <nav>
    <input type="checkbox" id="menu-toggle" />
    <label id="hamburger-icon" aria-label="Open navigation menu" for="menu-toggle">&#9776;&#xFE0E;</label>

    <div id="menu-blur"></div>

    <ul id="menu">
      <li><a href="/#">Home</a></li>
      <li><a href="/blog/#">Blog</a></li>
      <li><a href="/#work">Work</a></li>
      <li><a href="https://github.com/igorskyflyer" target="_blank">Github</a></li>
      <li><a href="/#portfolio">Portfolio</a></li>
      <li><a href="/contact/">Contact</a></li>
      <li><a href="/privacy/">Privacy</a></li>
      <li><a href="/about/#">About</a></li>
    </ul>
  </nav>
</header>
