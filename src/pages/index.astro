---
import BaseHead from '../components/BaseHead.astro'
import BlogPostPreview from '../components/BlogPostPreview.astro'

const title = 'My world'
const description = 'My own blog'

let posts = await Astro.glob('./post/*.md')
// sort the posts
posts = posts.sort((a, b) => new Date(b.frontmatter.publishDate).valueOf() - new Date(a.frontmatter.publishDate).valueOf())
---

<!DOCTYPE html>
<html style="background: #171424; color: #FFF;">
  <BaseHead {title} {description} />
  <body>
