{
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"@components/*": [
				"src/components/*"
			],
			"@layouts/*": [
				"src/layouts/*"
			],
			"@interfaces/*": [
				"src/components/interfaces/*"
			],
			"@functions/*": [
				"src/functions/*"
			],
			"@styles/*": [
				"public/styles/*"
			],
		},
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true
	}
}
